{
  "name": "plumbing",
  "version": "0.0.1",
  "description": "Hacking something together as a base for a real-time multiplayer game",
  "main": "index.js",
  "configuration": {
    "server": {
      "port": 8000,
      "verbose": true
    }
  },
  "scripts": {
    "dev": "concurrently \"nodemon server/index.js\" \"webpack --watch\" \"nodemon -e scss -x 'sass public/styling/index.scss public/index.css'\"",
    "start": "node server/index.js",
    "build": "webpack --mode production"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "express-session": "^1.17.0",
    "form-data": "^3.0.0",
    "sass": "^1.26.3",
    "socket.io": "^2.3.0",
    "uuid": "^3.3.3"
  },
  "devDependencies": {
    "concurrently": "^5.0.0",
    "nodemon": "^1.19.3",
    "socket.io-client": "^2.3.0",
    "webpack": "^4.41.0",
    "webpack-cli": "^3.3.9",
    "webpack-dev-server": "^3.8.2"
  },
  "nodemonConfig": {
    "ignore": [
      "client/*"
    ]
  }
}
